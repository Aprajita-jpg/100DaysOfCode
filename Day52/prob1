#include <iostream>
#include <vector>
using namespace std;

int countSaddlePoints(vector<vector<int>>& mat) {
    int n = mat.size();
    int m = mat[0].size();
    int count = 0;

    for (int i = 0; i < n; i++) {
        // Find minimum element in the current row
        int rowMin = mat[i][0];
        int colIndex = 0;
        for (int j = 1; j < m; j++) {
            if (mat[i][j] < rowMin) {
                rowMin = mat[i][j];
                colIndex = j;
            }
        }

        // Check if rowMin is maximum in its column
        bool isSaddle = true;
        for (int k = 0; k < n; k++) {
            if (mat[k][colIndex] > rowMin) {
                isSaddle = false;
                break;
            }
        }

        if (isSaddle)
            count++;
    }

    return count;
}

int main() {
    int n, m;
    cout << "Enter rows and columns: ";
    cin >> n >> m;

    vector<vector<int>> mat(n, vector<int>(m));
    cout << "Enter matrix elements:\n";
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            cin >> mat[i][j];

    cout << "Number of saddle points = " << countSaddlePoints(mat);

    return 0;
}
