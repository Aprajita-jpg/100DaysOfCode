#include <iostream>
#include <vector>
using namespace std;

void replaceWithRowSum(vector<vector<int>>& mat) {
    int n = mat.size();
    int m = mat[0].size();

    for (int i = 0; i < n; i++) {
        int rowSum = 0;
        for (int j = 0; j < m; j++)
            rowSum += mat[i][j];

        for (int j = 0; j < m; j++)
            mat[i][j] = rowSum;
    }
}

int main() {
    int n, m;
    cout << "Enter rows and columns: ";
    cin >> n >> m;

    vector<vector<int>> mat(n, vector<int>(m));
    cout << "Enter matrix elements:\n";
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            cin >> mat[i][j];

    replaceWithRowSum(mat);

    cout << "Matrix after replacing elements with row sum:\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++)
            cout << mat[i][j] << " ";
        cout << endl;
    }

    return 0;
}
