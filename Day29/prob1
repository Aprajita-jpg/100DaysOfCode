#include <iostream>
using namespace std;

int main() {
    string s = "Hello World from C++";
    string result = "";
    string word = "";

    for (int i = 0; i <= s.length(); i++) {
        if (i == s.length() || s[i] == ' ') {
            // reverse the collected word
            reverse(word.begin(), word.end());
            result += word;

            if (i != s.length()) result += " "; // add space
            word = "";  // reset for next word
        }
        else {
            word += s[i];
        }
    }

    cout << result;
    return 0;
}
