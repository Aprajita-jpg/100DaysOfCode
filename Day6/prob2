#include <iostream>
#include <vector>
using namespace std;

int equilibriumIndex(vector<int>& arr) {
    int totalSum = 0;

    // Step 1: Find total sum
    for (int x : arr)
        totalSum += x;

    int leftSum = 0;

    // Step 2: Traverse array and maintain left sum
    for (int i = 0; i < arr.size(); i++) {
        totalSum -= arr[i];   // now totalSum = right sum

        if (leftSum == totalSum)
            return i;

        leftSum += arr[i];
    }

    return -1;  // no equilibrium index
}

int main() {
    vector<int> arr = {-7, 1, 5, 2, -4, 3, 0};
    int idx = equilibriumIndex(arr);

    if (idx != -1)
        cout << "Equilibrium Index: " << idx;
    else
        cout << "No Equilibrium Index";
}
