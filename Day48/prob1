#include <iostream>
#include <vector>
using namespace std;

int rowWithMaxOnes(vector<vector<int>>& matrix) {
    int n = matrix.size();
    int m = matrix[0].size();

    int maxRow = -1;
    int j = m - 1;   // start from last column

    // Check each row
    for(int i = 0; i < n; i++) {
        while(j >= 0 && matrix[i][j] == 1) {
            j--;          // move left
            maxRow = i;   // update the row index
        }
    }

    return maxRow;   // row index having most 1s
}

int main() {
    int n, m;
    cout << "Enter rows and columns: ";
    cin >> n >> m;

    vector<vector<int>> matrix(n, vector<int>(m));
    cout << "Enter matrix (sorted rows):\n";
    for(int i = 0; i < n; i++)
        for(int j = 0; j < m; j++)
            cin >> matrix[i][j];

    int ans = rowWithMaxOnes(matrix);

    cout << "Row with maximum 1s is: " << ans << endl;

    return 0;
}
