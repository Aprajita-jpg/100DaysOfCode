#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
    Node(int val) : data(val), next(nullptr) {}
};

class Stack {
    Node* topNode;

public:
    Stack() {
        topNode = nullptr;
    }

    bool isEmpty() {
        return topNode == nullptr;
    }

    void push(int val) {
        Node* newNode = new Node(val);
        newNode->next = topNode;
        topNode = newNode;
        cout << val << " pushed to stack\n";
    }

    void pop() {
        if (isEmpty()) {
            cout << "Stack underflow\n";
            return;
        }
        Node* temp = topNode;
        topNode = topNode->next;
        cout << temp->data << " popped from stack\n";
        delete temp;
    }

    int top() {
        if (isEmpty()) {
            cout << "Stack is empty\n";
            return -1;
        }
        return topNode->data;
    }

    void printStack() {
        Node* curr = topNode;
        cout << "Stack top -> ";
        while (curr) {
            cout << curr->data << " ";
            curr = curr->next;
        }
        cout << endl;
    }
};

int main() {
    Stack s;

    s.push(10);
    s.push(20);
    s.push(30);

    s.printStack();

    cout << "Top element: " << s.top() << endl;

    s.pop();
    s.printStack();

    s.pop();
    s.pop();
    s.pop(); // underflow test

    return 0;
}
