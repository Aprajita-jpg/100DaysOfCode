#include <bits/stdc++.h>
using namespace std;

int countPairsWithSum(vector<int>& arr, int k) {
    unordered_map<int, int> freq;
    int count = 0;

    for (int x : arr) {
        int target = k - x;

        if (freq[target] > 0) {
            count += freq[target];  // add how many times target appeared
        }

        freq[x]++;  // add current element to map
    }

    return count;
}

int main() {
    vector<int> arr = {1, 5, 7, 1};
    int k = 6;

    cout << countPairsWithSum(arr, k);
}
