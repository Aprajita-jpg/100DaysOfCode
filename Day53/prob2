#include <iostream>
#include <vector>
using namespace std;

void rotateOuterLayer(vector<vector<int>>& mat) {
    int n = mat.size();
    int m = mat[0].size();

    if (n <= 1 || m <= 1) return; // No rotation possible

    int prev = mat[0][0];

    // Top row (left to right)
    for (int j = 1; j < m; j++) {
        swap(prev, mat[0][j]);
    }

    // Right column (top to bottom)
    for (int i = 1; i < n; i++) {
        swap(prev, mat[i][m-1]);
    }

    // Bottom row (right to left)
    for (int j = m-2; j >= 0; j--) {
        swap(prev, mat[n-1][j]);
    }

    // Left
