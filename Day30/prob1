#include <iostream>
using namespace std;

bool substringMatch(string text, string pattern) {
    int n = text.length();
    int m = pattern.length();

    // Check each starting position
    for (int i = 0; i <= n - m; i++) {
        int j = 0;

        // Compare characters of pattern with substring of text
        while (j < m && text[i + j] == pattern[j]) {
            j++;
        }

        // If all characters matched
        if (j == m)
            return true;
    }

    return false;
}

int main() {
    string text = "HelloWorld";
    string pattern = "World";

    if (substringMatch(text, pattern))
        cout << "Pattern found";
    else
        cout << "Pattern not found";

    return 0;
}
