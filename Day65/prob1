#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

// Function to rearrange odd-even based on position
Node* oddEvenList(Node* head) {
    if (!head || !head->next)
        return head;

    Node* odd = head;
    Node* even = head->next;
    Node* evenHead = even;

    while (even && even->next) {
        odd->next = even->next;
        odd = odd->next;

        even->next = odd->next;
        even = even->next;
    }

    odd->next = evenHead;
    return head;
}

// Insert at end
void insert(Node*& head, int val) {
    Node* newNode = new Node();
    newNode->data = val;
    newNode->next = NULL;

    if (!head) {
        head = newNode;
        return;
    }

    Node* temp = head;
    while (temp->next)
        temp = temp->next;

    temp->next = newNode;
}

// Print list
void printList(Node* head) {
    while (head) {
        cout << head->data << " -> ";
        head = head->next;
    }
    cout << "NULL";
}

int main() {
    Node* head = NULL;

    insert(head, 1);
    insert(head, 2);
    insert(head, 3);
    insert(head, 4);
    insert(head, 5);

    cout << "Original List:\n";
    printList(head);

    head = oddEvenList(head);

    cout << "\n\nAfter Odd-Even Rearrangement:\n";
    printList(head);

    return 0;
}
