#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

// Function to reverse linked list
Node* reverseList(Node* head) {
    Node* prev = NULL;
    Node* curr = head;
    Node* next = NULL;

    while (curr != NULL) {
        next = curr->next;   // store next
        curr->next = prev;  // reverse link
        prev = curr;        // move prev forward
        curr = next;        // move curr forward
    }

    return prev;  // new head
}

