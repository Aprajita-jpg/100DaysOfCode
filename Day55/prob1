#include <iostream>
using namespace std;

// Node structure
struct Node {
    int data;
    Node* next;
    Node(int val) : data(val), next(nullptr) {}
};

// Function to print linked list
void printList(Node* head) {
    Node* temp = head;
    while (temp != nullptr) {
        cout << temp->data << " -> ";
        temp = temp->next;
    }
    cout << "NULL" << endl;
}

// Function to delete node at given position (0-based index)
Node* deleteAtPosition(Node* head, int pos) {
    if (head == nullptr) return nullptr;

    if (pos == 0) {           // Delete first node
        Node* temp = head;
        head = head->next;
        delete temp;
        return head;
    }

    Node* curr = head;
    for (int i = 0; i < pos - 1 && curr != nullptr; i++)
        curr = curr->next;

    if (curr == nullptr || curr->next == nullptr) {
        cout << "Position out of range!" << endl;
        return head;
    }

    Node* temp = curr->next;
    curr->next = curr->next->next;
    delete temp;
