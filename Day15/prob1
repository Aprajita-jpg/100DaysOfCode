#include <bits/stdc++.h>
using namespace std;

int linearSearch(vector<int>& arr, int target) {
    for (int i = 0; i < arr.size(); i++) {
        if (arr[i] == target)
            return i;   // return index when found
    }
    return -1;          // target not found
}

int main() {
    vector<int> arr = {4, 2, 7, 1, 9};
    int target = 7;

    cout << linearSearch(arr, target);
}
