#include <bits/stdc++.h>
using namespace std;

void mergeArray(vector<int>& arr, int left, int mid, int right) {
    vector<int> temp;
    int i = left;       // start of left half
    int j = mid + 1;    // start of right half

    // Merge two sorted halves
    while (i <= mid && j <= right) {
        if (arr[i] <= arr[j])
            temp.push_back(arr[i++]);
        else
            temp.push_back(arr[j++]);
    }

    // Copy remaining elements
    while (i <= mid) temp.push_back(arr[i++]);
    while (j <= right) temp.push_back(arr[j++]);

    // Put back into original array
    for (int k = left; k <= right; k++) {
        arr[k] = temp[k - left];
    }
}

void mergeSort(vector<int>& arr, int left, int right) {
    if (left >= right) return;

    int mid = left + (right - left) / 2;

    mergeSort(arr, left, mid);      // sort left part
    mergeSort(arr, mid + 1, right); // sort right part
    mergeArray(arr, left, mid, right);
}

int main() {
    vector<int> arr = {38, 27, 43, 3, 9, 82, 10};

    mergeSort(arr, 0, arr.size() - 1);

    for (int x : arr) cout << x << " ";
}
