#include <iostream>
using namespace std;

void insertionSort(int arr[], int n) {
    for (int i = 1; i < n; i++) {
        int key = arr[i];     // current element
        int j = i - 1;

        // Shift elements to the right
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }

        // Insert key at correct position
        arr[j + 1] = key;
    }
}

int main() {
    int arr[] = {8, 3, 5, 2, 4};
    int n = 5;

    cout << "Before Sorting:\n";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";

    insertionSort(arr, n);

    cout << "\n\nAfter Insertion Sort:\n";
    for (int i = 0; i < n; i++)
        cout << arr[i] <
